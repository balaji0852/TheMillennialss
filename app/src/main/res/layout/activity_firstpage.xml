<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/headline"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="658dp"
            android:fontFamily="@font/bungee_shade"
            android:text="@string/app_name"
            android:textColor="@color/red"
            android:textSize="33dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cycleleft"
            android:layout_width="wrap_content"
            android:layout_height="307dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="201dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="221dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cyclebottom"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="513dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/Headlinebackgroung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="79dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="529dp"
            android:background="@drawable/corner_white"
            android:fontFamily="sans-serif-black"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/headlineofday"
            android:layout_width="wrap_content"
            android:layout_height="113dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="83dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="533dp"
            android:background="@color/black"
            android:fontFamily="sans-serif-black"
            android:text="corona pandemic is creating hatred over china.world remenbers this????/"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="24dp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
